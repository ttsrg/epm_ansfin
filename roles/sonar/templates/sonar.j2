[Unit]
Description=Sonar
After=network.target network-online.target
Wants=network-online.target

[Service]
ExecStart=/opt/sonarqube-6.7/bin/linux-x86-64/sonar.sh start
ExecStop=/opt/sonarqube-6.7/bin/linux-x86-64/sonar.sh stop
ExecReload=/opt/sonarqube-6.7/bin/linux-x86-64/sonar.sh restart
PIDFile=/opt/sonarqube-6.7/bin/linux-x86-64/./SonarQube.pid
Type=forking
User=sonar

[Install]
WantedBy=multi-user.target